.github-projects-gallery
  flex-flow row wrap
  display flex
  margin-top 2em
  margin-bottom 2em

  .github-project
    text-align center
    display block
    flex auto
    width 50%
    min-height 150px
    padding 0.5em 0.7em
    transition all .3s ease-in-out
    text-decoration none
    background rgb(242, 242, 242)

    &:hover, &:active, &:focus
      color color_light
      background-color color_dark

    .link
      font-size 1.3em
      text-decoration underline
