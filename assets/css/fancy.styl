@require 'variables'

body
  background-color color_theme_inverted
  background-color white
  color color_text

a
  display inline-block
  color inherit

  &:hover, &:focus, &:active
    background-color color_theme_inverted
    color color_theme
    border-radius 2px

body > header > section a
  background-color transparent
  color inherit
  &:hover, &:focus, &:active
    background-color color_theme_inverted
    color color_theme



body > header > section
  background color_theme
  color color_theme_inverted

.results-container
  background-color transparent
  margin-bottom space
  li
    display block
    margin-top space
    opacity 0
    height 0
    transition all 0.2s linear
    transform translateY(-1em)
    animation-name fly-in
    animation-duration 0.2s
    animation-timing-function linear
    animation-fill-mode forwards
    for num in 1..10
      &:nth-child({num}n)
        animation-delay 0.06s * num

@keyframes fly-in
  from
    height 0
  to
    opacity 1
    height 1em
    background transparent
    transform translateY(0px)



.article-link
  margin-top space
  position relative

  time
    display inline-block
    position absolute
    font-size 0.75em
    top 0.1em
    right 0em
    margin-left 2em
    opacity 0.2
  &:hover time
    opacity 0.3

.icon
  box-sizing content-box
  width 1.1em
  height 1.1em
  padding 0.1em 0.3em
  vertical-align sub
  fill lighten(color_text, 20)


.article-link
  &.hidden
    display none

pre
  position relative
  background-color color_theme
  color color_theme_inverted
  border-left 5px solid color_yellow



pre
  overflow scroll
  padding 2em 1em

@media all and (min-width: 60rem)
  .highlight
    margin-left -5rem
    margin-right -5rem
    padding-left 5rem
    padding-right 5rem
@media all and (max-width 60rem)
  .highlight
    margin-left -1.5rem
    margin-right -1.5rem
    padding-left 1.5rem
    padding-right 1.5rem
