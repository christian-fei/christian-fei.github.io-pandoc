@require 'variables'

body
  background-color #fff
  color color_text

body > header > section
  background color_theme
  color color_theme_inverted

.results-container
  background-color transparent
  margin-bottom space
  li
    display block
    margin-top space
    opacity 0
    height 0
    transition all 0.2s linear
    transform translateY(-1em)
    animation-name fly-in
    animation-duration 0.2s
    animation-timing-function linear
    animation-fill-mode forwards
    for num in 1..10
      &:nth-child({num}n)
        animation-delay 0.06s * num

@keyframes fly-in
  from
    height 0
  to
    opacity 1
    height 1em
    background transparent
    transform translateY(0px)



.article-link
  margin-top space
  position relative

  time
    display inline-block
    position absolute
    top -0.9em
    right 0em
    margin-left 2em
    opacity 0.3
  &:hover time
    opacity 0.5

.icon
  box-sizing content-box
  width 1.1em
  height 1.1em
  padding 0.1em 0.3em
  vertical-align sub
  fill lighten(color_text, 20)


.article-link
  &.hidden
    display none

pre
  background-color color_light


pre
  overflow scroll
  padding 2em 1em

@media all and (min-width 46rem)
  .highlight
    margin-left -5rem
    margin-right -5rem
    padding-left 5rem
    padding-right 5rem
@media all and (max-width 46rem)
  .highlight
    margin-left -1.5rem
    margin-right -1.5rem
    padding-left 1.5rem
    padding-right 1.5rem
