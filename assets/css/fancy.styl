@require 'variables'

body
  background-color color_theme
  color color_text

a
  display inline-block
  color inherit
  border-bottom 2px solid red
  // transition all .1s ease-in
  text-decoration none

  &:hover, &:focus, &:active
    background-color yellow
    // border-radius 2px
    // border-bottom 2px solid color_dark
    // color color_light
    // background-color color_dark

body > header
  background color_theme
  color color_text


.results-container
  background-color transparent
  margin-bottom space
  li
    display block
    margin-top space
    opacity 0
    height 0
    transition all 0.2s linear
    transform translateY(-1em)
    animation-name fly-in
    animation-duration 0.2s
    animation-timing-function linear
    animation-fill-mode forwards
    for num in 1..10
      &:nth-child({num}n)
        animation-delay 0.06s * num

@keyframes fly-in
  from
    height 0
  to
    opacity 1
    height 1em
    background transparent
    transform translateY(0px)



.article-link
  position relative
  // display inline-block
  margin-top space

  time
    display inline-block
    position absolute
    font-size 0.75em
    top 0.1em
    right 0em
    margin-left 2em
    opacity 0.2
  &:hover time
    opacity 0.3
  //&:hover .text
  //  background transparent

.icon
  box-sizing content-box
  width 1.1em
  height 1.1em
  padding 0.1em 0.3em
  vertical-align sub
  fill lighten(color_text, 20)

.article-link .text
  display inline-block
  background-color color_light
  // margin-left 2em
  padding 1em 0


.article-link
  &.hidden
    display none

.article-link .background-image
  display inline-block
  height 2em
  margin-left 2em
  vertical-align middle

pre
  position relative
  background-color color_theme
  color color_text



pre
  overflow scroll
  padding 2em 1em

@media all and (min-width: 60rem)
  .highlight
    margin-left -5rem
    margin-right -5rem
    padding-left 5rem
    padding-right 5rem
@media all and (max-width 60rem)
  .highlight
    margin-left -1.5rem
    margin-right -1.5rem
    padding-left 1.5rem
    padding-right 1.5rem

.fancy-highlight
  color #848484

@keyframes wiggle
  from
    transform rotateZ(-15deg) scaleY(1.4) scaleX(1.4)
  to
    transform rotateZ(25deg) scaleY(1.5) scaleX(1.5)

.hand
  display inline-block
  padding-left 0.2em
  padding-right 0.2em
  animation wiggle 1s ease 0s infinite
  animation-direction alternate-reverse

svg.twitter path
  fill #0084b4
svg.github path
  fill #333

::selection {
  background-color: yellow;
}

.bitcoin-address:hover
  width 400px
  max-width 100%