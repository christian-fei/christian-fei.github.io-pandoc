@require 'variables'

body
  background-color color_light

body > header
  background color_dark
  color color_light
  padding-top 2 * space
  padding-bottom 2 * space

  #search-input
    background color_light
    color color_dark
    padding .3em 1em

.post
  margin-top space
  position relative

  time
    display inline-block
    position absolute
    top -0.9em
    right 0em
    margin-left 2em
    opacity 0.1
    font-size 0.6em
  &:hover time
    opacity 0.35

#search-input
  border-bottom 1px solid black
  background-color transparent

#results-container
  padding-top space
  padding-bottom 2 * space
  background-color transparent
  li
    display block
    margin-top space
    opacity 0
    height 0
    transition all .05s linear
    transform translateY(-1em)
    animation-name fly-in
    animation-duration .05s
    animation-timing-function linear
    animation-fill-mode forwards
    for num in 1..10
      &:nth-child({num}n)
        animation-delay .05s * num

@keyframes fly-in
  to
    opacity 1
    height 1em
    background transparent
    transform translateY(0px)

.typewriter
  display inline-block
  min-height 1em
