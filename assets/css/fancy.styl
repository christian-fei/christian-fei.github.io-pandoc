#carbonads {
  --width: 180px;
  --font-size: 14px;
}

#carbonads {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", Helvetica, Arial, sans-serif !important;
  display: block !important;
  overflow: hidden !important;
  margin-bottom: 20px !important;
  max-width: var(--width) !important;
  border-radius: 4px !important;
  text-align: center !important;
  box-shadow: 0 0 0 1px hsla(0, 0%, 0%, .1) !important;
  background-color: hsl(0, 0%, 98%) !important;
  font-size: var(--font-size) !important;
  line-height: 1.5 !important;
}

#carbonads a {
  color: inherit !important;
  text-decoration: none !important;
}

#carbonads a:hover {
  color: inherit !important;
}

#carbonads span {
  position: relative !important;
  display: block !important;
  overflow: hidden !important;
}

.carbon-img {
  display: block !important;
  margin-bottom: 8px !important;
  max-width: var(--width) !important;
  line-height: 1 !important;
}

.carbon-img img {
  display: block !important;
  margin: 0 auto !important;
  max-width: var(--width) !important !important;
  width: var(--width) !important;
  height: auto !important;
}

.carbon-text {
  display: block !important;
  padding: 0 1em 8px !important;
}

.carbon-poweredby {
  display: block !important;
  padding: 10px var(--font-size) !important;
  background: repeating-linear-gradient(-45deg, transparent, transparent 5px, hsla(0, 0%, 0%, .025) 5px, hsla(0, 0%, 0%, .025) 10px) hsla(203, 11%, 95%, .4) !important;
  text-transform: uppercase !important;
  letter-spacing: .5px !important;
  font-weight: 600 !important;
  font-size: 9px !important;
  line-height: 0 !important;
}

@media only screen and (min-width: 320px) and (max-width: 759px) {
  #carbonads {
    float: none;
    margin: 0 auto;
    max-width: 330px;
  }
  #carbonads span {
    position: relative;
  }
  #carbonads > span {
    max-width: none;
  }
  .carbon-img {
    float: left;
    margin: 0;
  }

  .carbon-img img {
    max-width: 130px !important;
  }
  .carbon-text {
    float: left;
    margin-bottom: 0;
    padding: 8px 20px;
    text-align: left;
    max-width: calc(100% - 130px - 3em);
  }
  .carbon-poweredby {
    left: 130px;
    bottom: 0;
    display: block;
    width: 100%;
  }
}
