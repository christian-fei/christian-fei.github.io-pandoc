@require 'variables'

body
  background-color #fff
  color color_text

.results-container
  background-color transparent
  margin-bottom space
  li
    display block
    margin-top space
    opacity 0
    height 0
    transition all 0.2s linear
    transform translateY(-1em)
    animation-name fly-in
    animation-duration 0.2s
    animation-timing-function linear
    animation-fill-mode forwards
    for num in 1..10
      &:nth-child({num}n)
        animation-delay 0.06s * num

@keyframes fly-in
  from
    height 0
  to
    opacity 1
    height 1em
    background transparent
    transform translateY(0px)



.article-link
  margin-top space
  position relative

  time
    display inline-block
    position absolute
    top -0.9em
    right 0em
    margin-left 2em
    opacity 0.3
  &:hover time
    opacity 0.5

.icon
  box-sizing content-box
  width 1.1em
  height 1.1em
  padding 0.1em 0.3em
  vertical-align sub
  fill lighten(color_text, 20)

.title-popover
  position relative
  display inline-block
.title-popover:hover:before,
.title-popover:active:before,
.title-popover:focus:before
  content attr(title)
  transition all .3s ease-in-out
  position absolute
  top 100%
  right 0
  display inline-block
  padding 0.5em 1em
  min-width 270px
  background color_text !important
  color color_light !important
  font-size 0.8em
  text-align center
  letter-spacing -1px
  border-radius 2px

.avatar
  position absolute
  top 3em
  left -1 * space * 2
  border-radius 50%
  width 3em
  height 3em
  vertical-align top

@media all and (max-width: container_width * 1.5)
  .avatar
    display none
    visibility hidden

.article-link
  &.hidden
    display none
