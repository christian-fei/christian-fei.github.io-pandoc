unit = 1rem
color_dark = #161616
color_light = #fff

body > header
  background color_dark
  color color_light
  padding-top 2 * unit
  padding-bottom 2 * unit

  a
    color inherit
    border-bottom-color white
  #search-input
    background color_light
    color color_dark
    padding .3em 1em
body
  background-color color_light

.list-post-section
  margin-top unit
  position relative

  time
    display inline-block
    position absolute
    top -0.9em
    right 0em
    margin-left 2em
    opacity 0.1
    font-size 0.6em
  &:hover time
    opacity 0.35

#search-input
  font-size 0.95em
  border none
  outline none
  border-bottom 1px solid black
  background-color transparent


duration = 0.05s
#results-container
  padding-top unit
  padding-bottom unit
  background-color transparent
  list-style-type none
  font-size 0.8em

  li
    display block
    animation-name fly-in
    animation-duration duration * 2
    transform translateX(-10px)
    animation-fill-mode forwards
    opacity 0

@keyframes fly-in
  from
    background transparent
  to
    opacity 1
    transform translateX(0)
    background transparent

.typewriter
  display inline-block
  min-height 1em

time, address
  font-size 0.8em
