@require 'variables'

html, body
  min-height 100%
  height 100%
  padding 0
  margin 0

body > main,
body > header > section,
body > footer
  padding-top space * 0.5
  padding-bottom space * 0.5

body > header > nav
  padding-top space * 2
  padding-bottom space

body > header > nav a
  display inline-block
  padding-left 1em
  padding-right 1em
body > header > nav a:first-child
  // padding-left 0
  margin-left -1em

article > footer
  margin-top space * 2

body > main
  &.free
    max-width none

.container
  padding-right space
  padding-left space
  max-width container_width
  margin auto
  position relative

.flex-container
  display flex
  .no-flex
    flex none
  .flex
    flex 1

body > footer
  padding-top 4em
  padding-bottom 2em

.social-links-container
  float right

.search-input
  display block
  width 100%

.avatar-container
  display block
  float left
  img
    height 7.1em
    width 128px
    margin-right 1em
    border-radius 50%



@media all and (max-width container_width)
  .hide-mobile
    display none

.fr
  float right

.article-link
  display block

.mt
  margin-top 2em

.mt-l
  margin-top 6em

.spaced-list li
  margin-bottom 1.5em


.discover p
  margin-top 0
  margin-bottom 0
  margin-left 3em

.navbar.hide
  display none
