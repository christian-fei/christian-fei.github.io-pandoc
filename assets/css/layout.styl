@require 'variables'

html, body
  min-height 100%
  height 100%
  padding 0
  margin 0

body > main > *
  padding-top space
  padding-bottom space

body > header,
body > footer
  padding-top 2 * space
  padding-bottom 2 * space

body > main
  &.free
    max-width none

.container
  padding-right space
  padding-left space
  max-width 42rem
  margin auto

