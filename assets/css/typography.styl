@require 'variables'
@import url('https://fonts.googleapis.com/css?family=Roboto')

html
  font-size 1em

body
  font-family 'Roboto', sans-serif
  font-weight 400
  line-height 1.45
  color color_dark

p
  margin-bottom 1.3em

h1, h2, h3, h4
  margin 1.414em 0 0.5em
  font-weight inherit
  line-height 1.2


h1
  margin-top 0.7em
  font-size 5.063em

h2
font-size 3.375em

h3
  font-size 2.25em

h4
  font-size 1.5em

small, .font_smallfont-size 0.667em

b,
strong
  font-weight inherit
  font-weight bolder


input
  font-family sans-serif
  font-size 100%
  line-height 1.15
  margin 0


small
  font-size .75em


pre
  overflow scroll
  padding 1em

code,
pre
  font-family monospace, monospace
  font-size 1em

time, address
  font-size 0.8em

a
  display inline-block
  font-weight bold
  color color_dark
  outline 0
  border 0
  text-decoration underline

a:hover, a:focus, a:active
  background black
  color white

body > header
  background color_dark
  color color_light
  a
    color inherit
  a:hover, a:focus, a:active
    background white !important
    color black !important

  .home-link
    text-decoration none

.post
  font-size 0.8em


#search-input
  font-size 0.95em
  border none
  outline none

#results-container
  font-size 0.8em
  list-style-type none
