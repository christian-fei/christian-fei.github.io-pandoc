@require 'variables'
@require 'type-scale'

html
  font-size 18px
@media all and (max-width 40em)
  html
    font-size 16px

body
  font-family sans-serif
  font-weight 400
  line-height 1.45
  color color_text


a
  display inline-block
  font-weight bold
  outline 0
  border 0
  text-decoration underline
  color color_text

  &:hover, &:focus, &:active
    background-color color_theme_inverted
    color color_theme
    border-radius 2px

body > header > section a
  background-color transparent
  color color_theme_inverted
  &:hover, &:focus, &:active
    background-color color_theme_inverted
    color color_theme



.search-input
  display block
  font-size 0.95em
  border none
  outline none
  border-radius 5px
  color color_text
  padding 0.5em 0
  transition all .2s ease-in-out

  &:focus, &:active, &:hover
    color color_text
    background-color rgba(black, 0.02)


b,
strong
  font-weight inherit
  font-weight bolder


input
  font-family sans-serif
  font-size 100%
  line-height 1.15
  margin 0

code,
pre
  font-family monospace, monospace
  font-size 1em

time, address
  font-size 0.8em


article > header > h1
  font-size 3.57em

body > footer
  font-size 0.9em
