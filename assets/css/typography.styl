@import url('https://fonts.googleapis.com/css?family=Roboto');

html {font-size: 1em;}

body {
  font-family: 'Roboto', sans-serif;
  font-weight: 400;
  line-height: 1.45;
  color: #333;
}

p {margin-bottom: 1.3em;}

h1, h2, h3, h4 {
  margin: 1.414em 0 0.5em;
  font-weight: inherit;
  line-height: 1.2;
}

h1 {
  margin-top: 0;
  font-size: 5.063em;
}

h2 {font-size: 3.375em;}

h3 {font-size: 2.25em;}

h4 {font-size: 1.5em;}

small, .font_small {font-size: 0.667em;}

b,
strong {
  font-weight: inherit;
  font-weight: bolder;
}

input {
  font-family: sans-serif;
  font-size: 100%;
  line-height: 1.15;
  margin: 0;
}

small {
  font-size: .75em;
}

pre {
  overflow: scroll;
  padding: 1em;
}
code,
pre {
  font-family: monospace, monospace;
  font-size: 1em;
}

a {
  display inline-block
  font-weight: bold;
  color: #222;
  outline: 0;
  border: 0;
  text-decoration: none;
  border-bottom 2px solid black
}

a:hover, a:focus, a:active
  background black
  color white

body > header
  a:hover, a:focus, a:active
    background white !important
    color black !important

.list-post-section a
  border-bottom none !important
